{
    "desc": {
        "exit": "离开",
        "battle": "战斗",
        "-money": "失去 {money} 金币",
        "+money": "获得 {money} 金币",
        "-allMoney": "失去所有金币",
        "-hp": "失去 {hp} hp",
        "+hp": "获得 {hp} hp",
        "-maxHpPrecentage": "血量上限减少 {maxHpPrecentage}%",
        "-maxHp": "血量上限减少 {maxHp}",
        "+maxHp": "血量上限增加 {maxHp}",
        "+item": "获得 {item}",
        "+randomItems": "获得 {randomNum} 件随机物品",
        "reinforceRandomRelics": "随机强化 {reinforceNum} 件遗物",
        "gambling": "压 {wager} 金币，{rate}% 胜利获得 {award} 金币"
    },

    "groups": {
        "g1": {
            "title": "事件标题",
            "desc": "事件描述文字，说说这个事件是什么意思",
            "sels":[{
                "func": ["+money", "-hp"],
                "ps": {"money":10, "hp":1}
            }, {
                "desc": "获得一个 {item}，但你会失去所有金币",
                "func": ["-allMoney", "+item"],
                "ps": {"item": "MedicineBox"}
            }, {
                "func": ["exit"]
            }]
        },
        "g2": {
            "title": "事件标题",
            "desc": "事件描述文字，说说这个事件是什么意思",
            "sels":[{
                "func": ["-maxHpPrecentage", "reinforceRandomRelics"],
                "ps": {"maxHpPrecentage": 50, "reinforceNum":2}
            }, {
                "func": ["-maxHp", "reinforceRandomRelics"],
                "ps": {"maxHp": 5, "reinforceNum":1}
            }, {
                "func": ["exit"]
            }]
        },
        "g3": {
            "title": "事件标题",
            "desc": "事件描述文字，说说这个事件是什么意思",
            "sels":[{
                "desc": "进行一场普通战斗",
                "func": ["battle"],
                "ps": {"battleType": "normal"}
            }, {
                "func": ["-allMoney"]
            }]
        },
        "g4": {
            "title": "事件标题",
            "desc": "事件描述文字，说说这个事件是什么意思",
            "sels":[{
                "func": ["gambling"],
                "ps": {"wager":50, "rate":75, "award":100}
            }, {
                "func": ["gambling"],
                "ps": {"wager":50, "rate":25, "award":250}
            }, {
                "func": ["sequence"],
                "ps": {
                    "desc": "{rate}% 获得 {hp} hp 并损失 {money} 金币，{-rate}% 触发战斗",                    
                    "func": ["+hp", "-money"],
                    "rates": [99, 98, 97],
                    "ps": [{"hp":1, "money":10, "battleType":"normal"},
                           {"hp":2, "money":20, "battleType":"normal"},
                           {"hp":3, "money":30, "battleType":"normal"}],
                    "failedFunc": ["battle"]
                }
            }, {
                "func": ["+randomItems"],
                "ps": {
                    "randomNum": 2,
                    "items": {"HpPotion":100, "MedicineBox":50, "IceGun":1}
                }
            }, {
                "func": ["sequence"],
                "ps": {
                    "desc": "{rate}% 获得一个随机物品并损失 {hp} hp",
                    "func": ["-hp", "+randomItems"],
                    "rates": [99, 50, 1],
                    "items": {"HpPotion":100, "MedicineBox":50, "IceGun":1},
                    "randomNum": 1,
                    "ps": [{"hp":3}, {"hp":4}, {"hp":5}],
                    "failedFunc": ["exit"]
                }
            }, {
                "func": ["exit"]
            }]
        }
    }
}
